{
	"name": "__MSG_extName__",
	"version": "0.0.0.4",
	"description": "__MSG_extDescription__",
	"default_locale" : "en",
	"minimum_chrome_version" : "14.0.0.0",
	"background_page": "back/back.html",

	"icons": {
        "19" : "icon19.png",
		"128": "icon128.png"
	},

	"browser_action": {
		"default_title": "__MSG_extToolTip__",
		"default_icon": "icon19.png",
		"popup" : "popup/popup.html"
	},

	"content_scripts": [
		{
			"matches" : [
				"http://api.vkontakte.ru/blank.html*",
				"http://api.vk.com/blank.html*",
				"https://api.vkontakte.ru/blank.html*",
				"https://api.vk.com/blank.html*"
			],
			"js" : ["inject/vkaccess.js"],
            "all_frames" : true
		},
        {
            "matches" : [
                "http://api.vkontakte.ru/oauth/authorize*",
                "http://api.vk.com/oauth/authorize*",
                "https://api.vkontakte.ru/oauth/authorize*",
                "https://api.vk.com/oauth/authorize*"
            ],
            "js" : ["inject/vkframe.js"],
            "all_frames" : true,
            "run_at" : "document_start"
        }
	],

	"permissions": [
		"https://api.vkontakte.ru/*",
		"http://api.vkontakte.ru/*",
		"https://api.vk.com/*",
		"http://api.vk.com/*",
		"http://ws.audioscrobbler.com/*"
	]
}